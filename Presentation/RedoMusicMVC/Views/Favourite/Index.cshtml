@{
}
@model List<Instrument>;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Favorites</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 20px;
        }

        h1 {
            margin: 0;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            border: 1px solid #ddd;
            padding: 10px;
            margin: 10px 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .remove-button {
            background-color: #f00;
            color: #fff;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <header>
        <h1>Favorites</h1>
    </header>
    <div class="container">
        <ul>

            @if(Model.Count > 0)
            {
                @foreach (var instrument in Model)
                {
                    <li>
                        <img width="80" height="80" src="@instrument.Picture">
                        <span>@instrument.Name</span>
                        <button class="remove-button"><a href="/Favourite/Remove?barcode=@instrument.Barcode">Remove</a></button>
                    </li>
                }
            }
            else{
                <li>There is no Favourite Instrument Product</li>
            }
            
            
        </ul>
    </div>
</body>
</html>
