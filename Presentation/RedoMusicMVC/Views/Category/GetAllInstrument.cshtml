@{
}

@model Category

<h2>@Model</h2>

<ul>
    @if (Model.InstrumentList != null)
    {
        @foreach (var instrument in Model.InstrumentList)
        {
            <li>@instrument.Name</li>
            <li>@instrument.Price</li>
            <li>@instrument.Picture</li>
        }
    }
</ul>
