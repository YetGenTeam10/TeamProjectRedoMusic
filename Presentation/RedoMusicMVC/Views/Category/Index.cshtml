@using RedoMusic.Domain.Entities;

@model List<Category>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<div class="container mt-3">
    <h2>Categories Tables</h2>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Category</th>
                <th><a asp-action="Add" asp-route-id="id" class="btn bg-primary text-black">Add</a></th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.CategoryName</td>
                    <td><a asp-action="Delete" asp-route-id="@category.Id" class="btn bg-danger text-black">Delete</a></td>
                    <td><a asp-action="Update" asp-route-id="@category.Id" class="btn bg-warning text-black">Update</a></td>
                    <td><a asp-action="GetAllInstrument" asp-route-id="@category.Id" class="btn bg-success text-black">Get All Instrument</a></td>

                </tr>
            }
        </tbody>
    </table>
</div>

